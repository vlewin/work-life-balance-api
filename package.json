{
  "scripts": {
    "start": "yarn run transpile; serverless offline start",
    "transpile": "babel --presets es2015 app --out-dir dist",
    "package": "yarn run transpile; sls package -v",
    "deploy": "yarn install --production --ignore-scripts --prefer-offline; sls deploy -s development; yarn",
    "test": "jest ./tests",
    "test:watch": "jest ./tests --watch"
  },
  "dependencies": {
    "dynamoose": "^0.8.7",
    "jjv": "^1.0.2",
    "jjve": "^0.5.2"
  },

  "devDependencies": {
    "babel": "^6.23.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-regenerator": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "eslint": "^4.17.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jest": "^21.15.1",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-standard": "^3.0.1",
    "jest": "^22.4.3",
    "serverless-offline": "^3.17.0"
  }
